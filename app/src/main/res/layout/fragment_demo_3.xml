<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seek by section"
        android:textSize="12sp"/>

    <com.zhouyou.view.seekbar.SignSeekBar
        android:id="@+id/demo_3_seek_bar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="section text interval : 2"
        android:textSize="12sp"/>

    <com.zhouyou.view.seekbar.SignSeekBar
        android:id="@+id/demo_3_seek_bar_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="float type"
        android:textSize="12sp"/>

    <com.zhouyou.view.seekbar.SignSeekBar
        android:id="@+id/demo_3_seek_bar_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="float type, section text interval : 2, auto adjust"
        android:textSize="12sp"/>

    <com.zhouyou.view.seekbar.SignSeekBar
        android:id="@+id/demo_3_seek_bar_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <com.zhouyou.view.seekbar.MarkSeekBar
        android:id="@+id/demo_3_seek_bar_5"
        app:msb_min="0"
        app:msb_track_size="2dp"
        app:msb_second_track_size="2dp"
        app:msb_cache_track_size="2dp"
        app:msb_track_color="#66FFFFFF"
        app:msb_second_track_color="#26d3bc"
        app:msb_cache_track_color="#CCFFFFFF"
        app:msb_mark_radius="2.5dp"
        app:msb_touch_to_seek="true"
        app:msb_section_mark_color="#FF0000"
        app:msb_show_section_mark="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>